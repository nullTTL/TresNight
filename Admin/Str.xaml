<Page x:Class="TresNight.Admin.Str"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TresNight.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Str">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="160"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>

        </Grid.RowDefinitions>
        <Button Grid.Row="3" Grid.Column="3" Height="25" Width="80"  Content="Назад" Name="back" Click="back_Click"/>
        <Button Grid.Column="1" Grid.Row="1" Width="175" Height="25" Name="Add" FontSize="16" Content="Добавить работника" Margin="0 0 0 90" Click="Add_Click" />
        <Button Grid.Column="1" Grid.Row="1" Width="175" Height="25" FontSize="16" Content="Просмотр Учета"  Name="Listacc" Click="Listacc_Click" />
        <Button Grid.Column="1" Grid.Row="1" Width="175" Height="25" Name="SetterW" FontSize="16" Content="Ред/Просмотр раб." Margin="0 0 0 -90" Click="SetterW_Click" />
    </Grid>
</Page>
